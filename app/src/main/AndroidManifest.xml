<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leshchinskaya.marvelapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.leshchinskaya.marvelapp.MarvelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.leshchinskaya.marvelapp.UI.MainActivity">
        </activity>
        <activity android:name="com.example.leshchinskaya.marvelapp.UI.CharacterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.leshchinskaya.marvelapp.UI.HeroActivity"/>
    </application>

</manifest>